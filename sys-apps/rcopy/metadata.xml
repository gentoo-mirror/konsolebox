<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<email>konsolebox@gmail.com</email>
		<name>konsolebox</name>
		<description>Author of rcopy</description>
	</maintainer>
	<longdescription>
		A command-line tool that copies files along with their
		dependencies to a virtual root directory.  The resulting file's
		path is reproduced based on its source.
	</longdescription>
	<use>
		<flag name="nounset">Inject '[[ BASH_VERSINFO -ge 5 ]] &amp;&amp; set -u' to script</flag>
	</use>
	<upstream>
		<remote-id type="github">konsolebox/scripts</remote-id>
		<bugs-to>https://github.com/konsolebox/scripts/issues</bugs-to>
	</upstream>
</pkgmetadata>
